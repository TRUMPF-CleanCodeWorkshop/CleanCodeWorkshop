<Window x:Class="Silbentrenner.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="750" Width="725">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height ="30" ></RowDefinition>
            <RowDefinition Height ="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height ="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox  Width="350" HorizontalAlignment="Left"></TextBox>
        <Button Grid.Row="0" Width="50" HorizontalAlignment="Right">Laden</Button>
        
        <TextBox Grid.Row="1" ></TextBox>
    </Grid>
</Window>
